<h2>Listing Post</h2>
<% @posts.each do |post| %>   <!--先在controller定義instance,才能在此使用-->
  <div class="row">
    <div class="well col-md-6">
          <h4><%= post.title %></h4>

          <p> Content
            <%= post.content %>
          </p>
       
       <span>
         <%= link_to "show this post", post_path(post)  %>
       </span>
    </div>
  </div>
 <% end %>
