
<% @posts.each do |post| %>   <!--先在controller定義instance,才能在此使用-->
  <div class="col-md-8 ">
    
          <%= render partial: "categories/category", collection: post.categories %>
          
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Title: <%= post.title %></h3>

            </div>
            <div class="panel-body">
              <p> 
            <%= post.content %>
              </p>
              <span>
         <%= link_to "show this post", post_path(post)  %>
       </span>
            </div>
          </div>
          
       
       
    
  </div>
 <% end %>
