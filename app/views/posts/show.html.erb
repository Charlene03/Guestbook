<%= render 'shared/title', title: "#{@post.title}"%>
<div class= "row">
	 <div class="col-md-8 well">
 		   <%= render partial: "categories/category", collection: @post.categories %>
      
 	  	<p>
 	    	<h4><%= @post.content %></h4>
 	  	</p>
      <small><i>posted by </small><%= " #{@post.user.name}" %></i>
 	 </div>
</div>

<h4>All comments</h4> 
<% @post.comments.each do |comment| %>
	<div class="row">
 		<div class="col-md-8 well">
 	  	<p>
 	    	<h5><%= comment.content %></h5>
 	  	</p>
      <small><i>commented by</small><%= "#{comment.user.name}" %></i>
 		</div>

 	</div>
<% end %>


 <% if logged_in? %>


<h4>Leave a comment:</h4>
<%= form_for [@post, @comment] do |f| %>
  <div class="row">
    <%= f.text_area :content, rows: 3, class: 'col-md-4' %>
    <div class="col-md-2">
       <%= f.submit 'Create Comment', class: 'btn btn-primary' %>
    </div>
  </div>
  <br/>
 <% end %>
<% end %>


<div class="row">
  <%= link_to 'go back to all posts', posts_path %> 
</div>